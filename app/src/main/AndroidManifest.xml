<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nasko.vocebularyExercises">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ve"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.nasko.vocebularyExercises.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nasko.vocebularyExercises.activities.NewWordsActivity"
            android:parentActivityName="com.example.nasko.vocebularyExercises.activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasko.vocebularyExercises.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.example.nasko.vocebularyExercises.activities.dataVisualizationActivity"
            android:parentActivityName="com.example.nasko.vocebularyExercises.activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasko.vocebularyExercises.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.example.nasko.vocebularyExercises.activities.ExerciseActivity"
            android:parentActivityName="com.example.nasko.vocebularyExercises.activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasko.vocebularyExercises.activities.MainActivity" />
        </activity>

        <activity android:name="com.example.nasko.vocebularyExercises.activities.PreferenceActivity" />
        <activity android:name="com.example.nasko.vocebularyExercises.activities.PreExersciseActivity"></activity>
    </application>

</manifest>